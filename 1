       r=cnt2
       query="insert into gamer values(%s,%s,%s)"
       val=p,q,r
       cur.execute(query,val)
       conn.commit()
       print()
       query1=cur.execute("select * from gamer;")
       la=cur.fetchall()
       print("║        ℕ𝔸𝕄𝔼        ║  𝕃𝔼𝕍𝔼𝕃 𝟙  ║  𝕃𝔼𝕍𝔼𝕃 𝟚 ║")

       for i in la:
          print("║",i[0]," "*(18-len(i[0])),"║",i[1]," "*(8-len(str(i[1]))),"║",i[2]," "*(8-   len(str(i[2]))),"║")
          
