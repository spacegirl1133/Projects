    def starty():
        cnt=0
        cntc=0
        import random
        for i in range(5):
            choice=input("Enter r to choose rock\nEnter p to choose paper\nEnter s to choose scissor\nYour choice:")
            l=["r","p","s"]
            a=random.choice(l)
            print("Computer's choice:",a)
            if choice=="r" and a=="p":
                cntc=cntc+1
                print()
                print("𝒞𝑜𝓂𝓅𝓊𝓉𝑒𝓇 𝑔𝑜𝓉 𝒶 𝓅𝑜𝒾𝓃𝓉")
            if choice=="p" and a=="r":
                cnt=cnt+1
                print()
                print("Ⓨⓞⓤ ⓖⓔⓣ ⓐ ⓟⓞⓘⓝⓣ 🤩")
            if choice=="r" and a=="s":
                cnt=cnt+1  
                print()
                print("Ⓨⓞⓤ ⓖⓔⓣ ⓐ ⓟⓞⓘⓝⓣ 🤩")
            if choice=="s" and a=="r":
                cntc=cntc+1
                print()
                print("𝒞𝑜𝓂𝓅𝓊𝓉𝑒𝓇 𝑔𝑜𝓉 𝒶 𝓅𝑜𝒾𝓃𝓉")
            if choice=="p" and a=="s":
                cntc=cntc+1
                print()
                print("𝒞𝑜𝓂𝓅𝓊𝓉𝑒𝓇 𝑔𝑜𝓉 𝒶 𝓅𝑜𝒾𝓃𝓉")
            if choice=="s" and a=="p":
                cnt=cnt+1
                print()
                print("Ⓨⓞⓤ ⓖⓔⓣ ⓐ ⓟⓞⓘⓝⓣ 🤩")
            if choice==a:
               print()
               print("Same choice")
        p=cnt
        q=cntc
        leadership2(p,q)
        
        
    def leadership2(p,q):
        import pymysql as pm
        conn=pm.connect(host="localhost",user="root",password="divyanshisql",database="gamea")
        cur=conn.cursor()
        
        t=name
        if p>q:
            s="You win 😄"
        elif p==q:
            s="Tie"
        else:
            s="You lost 🙁"
        
        query="insert into gamerb values(%s,%s,%s,%s)"
        val=t,p,q,s
        cur.execute(query,val)
        conn.commit()
        query1=cur.execute("select * from gamerb;")
        lb=cur.fetchall()
        print()
        print("║  NAME    ║    𝕌𝕊𝔼ℝ ℙ𝕆𝕀ℕ𝕋  ║  ℂ𝕆𝕄ℙ𝕌𝕋𝔼ℝ'𝕊 ℙ𝕆𝕀ℕ𝕋  ║    ℝ𝔼𝕊𝕌𝕃𝕋  ")

        for j in lb:
             print("║",j[0]," "*(7-len(str(j[0]))),"║",j[1]," "*(14-len(str(j[1]))),"║",j[2]," "*(19-len(str(j[2]))),"║",j[3]," "*(15-len(j[3])))
    
                   
    starty()











