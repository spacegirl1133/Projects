import random
import time
import os  # For clearing the screen

def show_latest_color(color):
    print(color)            # Display the latest color
    time.sleep(1)           # Wait for 1 second
    os.system('cls' if os.name == 'nt' else 'clear')  # Clear the screen

def get_user_input(length):
    user_colors = []
    for i in range(length):
        color = input(f"Enter color {i+1}: ").strip().lower()
        user_colors.append(color)
    return user_colors

def play_game():
    colors = ["red", "blue", "green", "yellow", "purple", "orange"]
    sequence = []
    round_number = 1

    while True:
        print(f"Round {round_number}:")
        new_color = random.choice(colors)  # Select a random new color
        sequence.append(new_color)  # Add the new color to the sequence

        print("Memorize the latest color:")
        show_latest_color(new_color)  # Only show the latest color

        print("\nNow it's your turn to input the colors!")
        user_input = get_user_input(len(sequence))  # Ask the user to enter the full sequence
        
        if user_input == sequence:  # If the user got the sequence right
            print("Correct! Moving to the next round.")
            round_number += 1
        else:
            print("Oops! That's incorrect.")
            print(f"The correct sequence was: {sequence}")
            print(f"You reached round {round_number}.")
            break

if __name__ == "__main__":
    print("Welcome to Color Memory Match!")
    play_game()
